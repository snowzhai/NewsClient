<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.administrator.newclient.view.NoScrollViewPager
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/vp_contentfragment_pager"></com.example.administrator.newclient.view.NoScrollViewPager>


    <!--part III-->

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:id="@+id/rg_contentfragment_bottom"
        android:background="@drawable/bottom_tab_bg">

        <RadioButton
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:button="@null"
            android:gravity="center"
            android:textColor="@drawable/rb_textcolor"
            android:drawableTop="@drawable/rb_home_bg"
            android:text="首页"
            android:id="@+id/rb_contentfragment_home"
            />
        <RadioButton
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:button="@null"
            android:gravity="center"
            android:textColor="@drawable/rb_textcolor"
            android:drawableTop="@drawable/rb_news_bg"
            android:text="新闻中心"
            android:id="@+id/rb_contentfragment_newscenter"
            />
        <RadioButton
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:button="@null"
            android:gravity="center"
            android:textColor="@drawable/rb_textcolor"
            android:drawableTop="@drawable/rb_service_bg"
            android:text="智慧服务"
            android:id="@+id/rb_contentfragment_service"
            />
        <RadioButton
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:button="@null"
            android:gravity="center"
            android:textColor="@drawable/rb_textcolor"
            android:drawableTop="@drawable/rb_gov_bg"
            android:text="政务"
            android:id="@+id/rb_contentfragment_gov"
            />
        <RadioButton
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:button="@null"
            android:gravity="center"
            android:textColor="@drawable/rb_textcolor"
            android:drawableTop="@drawable/rb_setting_bg"
            android:text="设置"
            android:id="@+id/rb_contentfragment_setting"
            />

    </RadioGroup>

</LinearLayout>